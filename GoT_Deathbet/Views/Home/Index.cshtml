<script src="/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $(".Left_Slide").click(function () {
            Handle_Win(0);
        });
        $(".Right_Slide").click(function () {
            Handle_Win(1);
        });
    });
    function Handle_Win(winner) {
        var url = "";
        if (winner === 0) {
            url = "api/Vote/Post?id=0&Winner_id=" + $(".Left_Slide").attr("id") + "&Loser_id=" + $(".Right_Slide").attr("id");
        }
        if (winner === 1) {
            url = "api/Vote/Post?id=0&Winner_id=" + $(".Right_Slide").attr("id") + "&Loser_id=" + $(".Left_Slide").attr("id");
        }
        $.post(url);
    }

</script>